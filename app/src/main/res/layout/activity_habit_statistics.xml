<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beigeBackground"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Домой"
        android:textColor="@color/buttonTextColor"
        android:backgroundTint="@color/beige_secondary"
        android:layout_gravity="start"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статистика привычки"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/beige_accent"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/beige_card">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/habitLineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@color/beigeBackground"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvHabitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя привычки"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/beige_accent"
        android:gravity="center"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvHabitDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дни выполнения"
        android:textSize="16sp"
        android:textColor="@color/secondaryTextColor"
        android:gravity="center"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/tvHabitTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Время выполнения"
        android:textSize="16sp"
        android:textColor="@color/secondaryTextColor"
        android:gravity="center"
        android:layout_marginBottom="2dp"/>

</LinearLayout> 