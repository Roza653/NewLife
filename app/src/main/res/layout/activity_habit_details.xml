<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Заголовок с именем привычки -->
    <TextView
        android:id="@+id/habitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Name"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginTop="32dp" />

    <!-- Описание привычки -->
    <TextView
        android:id="@+id/habitDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@id/habitName"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- Кнопка статистики -->
    <Button
        android:id="@+id/statisticsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Statistics"
        android:layout_below="@id/habitDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Кнопка изменения привычки -->
    <Button
        android:id="@+id/editHabitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Habit"
        android:layout_below="@id/statisticsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Кнопка удаления привычки -->
    <Button
        android:id="@+id/deleteHabitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Habit"
        android:layout_below="@id/editHabitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
