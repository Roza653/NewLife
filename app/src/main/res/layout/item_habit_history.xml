<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textViewHabitNameHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название привычки"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewHabitDescHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание привычки"
        android:textSize="14sp"
        android:paddingTop="2dp"/>

    <TextView
        android:id="@+id/textViewHabitTimeHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время: 08:00"
        android:textSize="14sp"
        android:paddingTop="2dp"/>

    <TextView
        android:id="@+id/textViewHabitDaysHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дни: Пн, Ср, Пт"
        android:textSize="14sp"
        android:paddingTop="2dp"/>

</LinearLayout> 